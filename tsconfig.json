{
    "compilerOptions": {
        "outDir": "dist/",
        "rootDir" : "src/server",
        "removeComments": true,
        "allowJs": true,
        "typeRoots": ["./src/types"],
        "lib" : [
            "es6",
            "esnext.asynciterable",
            "es2016"
        ],
        "types" : [
            "node",
            "express",
            "mysql",
            "uuid",
            "bcrypt",
            "jsonwebtoken"
        ]
    }, 
    "include" : [
        "src/**/*"
    ],
    "exclude" : [
        "node_modules",
        "src/client/**/*"
    ]
}