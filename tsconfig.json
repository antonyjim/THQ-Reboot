{
    "compilerOptions": {
        "outDir": "dist/",
        "sourceMap": true,
        "rootDir": "src/",
        "removeComments": true,
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "ES6",
        "typeRoots": ["./src/types"],
        "lib": [
            "es6",
            "esnext.asynciterable",
            "es2016",
            "dom"
        ],
        "types": [
            "node",
            "express",
            "mysql",
            "uuid",
            "bcrypt",
            "jsonwebtoken",
            "nodemailer"
        ]
    },
    "include": [
        "src/server/**/*", "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "src/client/**/*"
    ]
}