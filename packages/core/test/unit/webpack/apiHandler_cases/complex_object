/**
 * A test with a nested object
 */

new ApiResource({
  table: 'sys_user',
  fields: [
    'sys_id',
    'user_name',
    'given_name'
  ],
  conditions: {
    'last_login[<]': (new Date(1570321600469)),
    last_scope: OSM.session.scope,
    given_name: OSM.form.customer.given_name,
    '$1.active': true
  },
  alias: 'empFirstNames',
  joins: {
    type: 'left',
    table: 'apos_customer',
    on: '$1.sys_id = $2.employee_id'
  },
  roles: {
    minimum: [
      'read_customer'
    ]
  }
})