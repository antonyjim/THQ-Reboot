{
  "compilerOptions": {
    "baseUrl": "..",
    "outDir": "core/dist/",
    "sourceMap": true,
    "rootDir": "..",
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./core/src/types", "./core/node_modules/@types"],
    "lib": ["es6", "esnext.asynciterable", "es2016"],
    "target": "es6",
    "types": [
      "node",
      "express",
      "mysql",
      "uuid",
      "lodash",
      "bcrypt",
      "jsonwebtoken",
      "nodemailer",
      "mocha",
      "chai",
      "formidable",
      "sinon",
      "webpack"
    ],
    "paths": {
      "@app/*": ["core/src/app/*"],
      "@lib/*": ["core/src/lib/*"],
      "@osm/*": ["core/src/types/*"],
      "@root/*": ["./*"],
      "@config": ["core/src/config"],
      "@test_utils": ["core/test/utils/*"],
    }
  },
  "include": ["**/src/server/**/*", "src/**/*"],
  "exclude": ["node_modules", "./core/test/**/*", "**/node_modules/**/*", "node_modules/**/*"]
}