{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist/",
    "sourceMap": true,
    "rootDir": "./src/",
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "lib": ["es6", "esnext.asynciterable", "es2016"],
    "types": [
      "node",
      "express",
      "mysql",
      "uuid",
      "lodash",
      "bcrypt",
      "jsonwebtoken",
      "nodemailer"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@osm/*": ["types/*"],
      "@root/*": ["."]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}