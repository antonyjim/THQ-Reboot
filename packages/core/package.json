  },
  "devDependencies": {
    "@babel/parser": "^7.5.5",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/formidable": "^1.0.31",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.122",
    "@types/mocha": "^5.2.6",
