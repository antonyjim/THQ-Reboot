    "module-alias": "^2.2.1",
    "nodemon": "^1.18.9",
    "ts-node": "^8.0.3"
  },
  "osm": {
    "basePath": "/",
    "entry": {
      "lib": "lib/index.ts",
      "route": "app/"
    },
    "lib": "shared"
  },
  "_moduleAliases": {
    "@app": "dist/app",
    "@lib": "dist/lib",
    "@client": "../client",
    "@osm": "dist/types",
    "@root": "dist/*"
  },
  "scripts": {
    "postinstall": "tsc -p .",
    "watch": "tsc -w -p .",
    "debug": "nodemon --ignore ./dist/lib/hooks --legacy-watch --watch ./dist --inspect-brk --nolazy ./dist/",
    "docker-debug": "docker-compose up",
    "start": "tsc -p ./config && node dist",
    "test": "mocha --no-timeouts --colors ./test/**/*.ts --require ts-node/register"
