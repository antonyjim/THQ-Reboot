{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist/",
    "sourceMap": true,
    "rootDir": "src",
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./core/src/types", "./core/node_modules/@types"],
    "lib": ["es6", "esnext.asynciterable", "es2016"],
    "target": "es5",
    "types": [
      "node",
      "express",
    ],
    "paths": {
      "@app/*": ["../../core/src/app/*"],
      "@lib/*": ["../../core/src/lib/*"],
      "@osm/*": ["../../core/src/types/*"],
      "@root/*": ["../../*"],
      "@config": ["../../core/src/config"],
      "@test_utils/*": ["../../core/test/utils/*"],
    }
  },
  "include": ["./src/server/**/*"],
  "exclude": ["node_modules", "test/**/*", "../**/node_modules/**/*", "node_modules/**/*"]
}